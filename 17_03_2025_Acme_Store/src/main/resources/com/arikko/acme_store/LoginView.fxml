<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arikko.acme_store.controllers.LoginViewController">
   <children>
      <Label layoutX="177.0" layoutY="107.0" text="Welcome back! Let's take you to your account." textAlignment="CENTER" />
      <Label layoutX="269.0" layoutY="67.0" text="Login" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="161.0" layoutY="150.0" text="Email" />
      <TextField fx:id="emailTextField" layoutX="161.0" layoutY="174.0" prefHeight="26.0" prefWidth="283.0" />
      <Label layoutX="162.0" layoutY="209.0" text="Password" />
      <PasswordField fx:id="passwordPasswordField" layoutX="162.0" layoutY="233.0" prefHeight="26.0" prefWidth="281.0" />
      <Button layoutX="162.0" layoutY="268.0" mnemonicParsing="false" onAction="#loginContinueOnAction" prefHeight="26.0" prefWidth="281.0" text="Continue" />
      <Label layoutX="162.0" layoutY="304.0" text="Don't have an account?" />
      <Button depthTest="ENABLE" layoutX="294.0" layoutY="304.0" mnemonicParsing="false" onAction="#signUpOnAction" style="-fx-background-color: transparent; -fx-padding: 0;" text="Sign Up" textFill="#0e82c9" underline="true" />
      <CheckBox fx:id="showPasswordCheckBox" layoutX="331.0" layoutY="209.0" mnemonicParsing="false" onAction="#showPasswordOnAction" text="Show Password" />
      <Label fx:id="showPasswordLabel" layoutX="285.0" layoutY="335.0" prefHeight="17.0" textAlignment="CENTER" />
   </children>
</AnchorPane>
